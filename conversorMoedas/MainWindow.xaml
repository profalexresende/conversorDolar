<Window x:Class="conversorMoedas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:conversorMoedas"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Label x:Name="lblValorDolar" Content="Valor da Doação em dólares:" HorizontalAlignment="Left" Margin="57,26,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtValorDolares" HorizontalAlignment="Left" Margin="57,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="btnConverter" Content="Converter para Reais" HorizontalAlignment="Left" Margin="57,151,0,0" VerticalAlignment="Top" Width="161" Click="btnConverter_Click"/>
        <Label x:Name="lblValorReais" Content="Content deve ser apagado" HorizontalAlignment="Left" Margin="57,176,0,0" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="lblVDolar" Content="Cotação do Dólar:" HorizontalAlignment="Left" Margin="57,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtVDolar" HorizontalAlignment="Left" Margin="57,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>

    </Grid>
</Window>
